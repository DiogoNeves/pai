<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/what"
        android:id="@+id/lblWhat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inWhat"
        android:layout_alignBottom="@+id/lblWhat"
        android:layout_toRightOf="@+id/lblWhat"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:imeOptions="actionSend"
        android:imeActionLabel="Send" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/inVoice"
        android:layout_marginTop="25dp"
        android:src="@drawable/microphone"
        android:contentDescription="@string/microphone_desc"
        android:onClick="toggleListening"
        android:layout_below="@+id/inWhat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/outIntentDebug"
        android:layout_alignRight="@+id/inWhat"
        android:layout_alignEnd="@+id/inWhat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/outInference"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/outSentence"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/inVoice"
        android:textStyle="bold|italic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="gravity"
        android:text="tap the button"
        android:gravity="center_horizontal"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/outInference"
        android:textStyle="bold|italic"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:layout_below="@+id/outSentence"
        android:layout_alignRight="@+id/inWhat"
        android:layout_alignEnd="@+id/inWhat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>
